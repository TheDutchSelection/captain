<%- if @apps.empty? %>
  <p class='mb-lg'><%= t('views.apps.index.empty') %></p>
<%- else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t('defaults.name') %></th>
        <th><%= t('models.app.etcd_key') %></th>
      </tr>
    </thead>
    <tbody>
      <%- @apps.each do |app| %>
        <tr>
          <td><%= link_to app.name, app_path(app) %></td>
          <td><%= app.etcd_key %></td>
        </tr>
      <%- end %>
    </tbody>
  </table>
<%- end %>
