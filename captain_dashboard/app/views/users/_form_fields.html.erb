<div class='row mtb-md'>
  <div class='col-md-2 mt-sm'>
    <%= form.label :email, t('defaults.email') %>
  </div>
  <div class='col-md-10'>
    <%= form.text_field :email, class: 'form-control', placeholder: t('defaults.email') %>
  </div>
</div>
<div class='row mtb-md'>
  <div class='col-md-2 mt-sm'>
    <%= form.label :role, t('models.user.role') %>
  </div>
  <div class='col-md-10'>
    <%= form.select :role, role_options, {}, class: 'form-control', placeholder: t('models.user.role') %>
  </div>
</div>
